generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"  // <--- Changed from "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT")
  
  // Driver-specific fields
  phone            String?
  isAvailable      Boolean  @default(true)
  currentLatitude  Float?
  currentLongitude Float?
  
  // Existing Relations
  calls     EmergencyCall[]
  appointmentsAsPatient Appointment[] @relation("PatientAppointments")
  appointmentsAsDoctor  Appointment[] @relation("DoctorAppointments")
  orders    Order[]
  
  // Driver assignments
  assignedCalls    EmergencyCall[] @relation("DriverAssignments")
}

model Appointment {
  id           String   @id @default(cuid())
  date         String
  reason       String
  status       String   @default("PENDING")
  prescription String?  // <--- ADD THIS LINE (The ? means it can be empty)
  
  patientId    String
  patient      User     @relation("PatientAppointments", fields: [patientId], references: [id])
  
  doctorId     String?
  doctor       User?    @relation("DoctorAppointments", fields: [doctorId], references: [id])
}

// (Keep your EmergencyCall model as it is)
model EmergencyCall {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  // Driver assignment
  driverId     String?
  driver       User?    @relation("DriverAssignments", fields: [driverId], references: [id])
  driverStatus String?  // ASSIGNED, EN_ROUTE, ARRIVED, COMPLETED
}

model Medicine {
  id        String   @id @default(cuid())
  name      String
  price     Float
  stock     Int
  description String?
}

model Order {
  id        String   @id @default(cuid())
  total     Float
  status    String   @default("PENDING") // PENDING, DELIVERED
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}