generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"  // <--- Changed from "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT")
  
  // Driver-specific fields
  phone            String?
  isAvailable      Boolean  @default(true)
  currentLatitude  Float?
  currentLongitude Float?
  
  // Existing Relations
  calls     EmergencyCall[]
  appointmentsAsPatient Appointment[] @relation("PatientAppointments")
  appointmentsAsDoctor  Appointment[] @relation("DoctorAppointments")
  orders    Order[]
  
  // Driver assignments
  assignedCalls    EmergencyCall[] @relation("DriverAssignments")
  
  // Delivery assignments
  assignedOrders   Order[]         @relation("DeliveryAssignments")
  
  // Health Card
  healthCard       HealthCard?
}

model Appointment {
  id           String   @id @default(cuid())
  date         String
  reason       String
  status       String   @default("PENDING")
  prescription String?  // <--- ADD THIS LINE (The ? means it can be empty)
  
  patientId    String
  patient      User     @relation("PatientAppointments", fields: [patientId], references: [id])
  
  doctorId     String?
  doctor       User?    @relation("DoctorAppointments", fields: [doctorId], references: [id])
}

// (Keep your EmergencyCall model as it is)
model EmergencyCall {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  // Driver assignment
  driverId     String?
  driver       User?    @relation("DriverAssignments", fields: [driverId], references: [id])
  driverStatus String?  // ASSIGNED, EN_ROUTE, ARRIVED, COMPLETED
}

model Medicine {
  id        String   @id @default(cuid())
  name      String
  price     Float
  stock     Int
  description String?
}

model Order {
  id        String   @id @default(cuid())
  total     Float
  status    String   @default("PENDING") // PENDING, ASSIGNED, OUT_FOR_DELIVERY, DELIVERED
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // Delivery assignment
  deliveryManId     String?
  deliveryMan       User?    @relation("DeliveryAssignments", fields: [deliveryManId], references: [id])
  deliveryStatus    String?  // ASSIGNED, PICKED_UP, OUT_FOR_DELIVERY, DELIVERED
  deliveryAddress   String?
}

model HealthCard {
  id              String   @id @default(cuid())
  
  // Basic Info
  dateOfBirth     String?
  bloodType       String?  // A+, A-, B+, B-, AB+, AB-, O+, O-
  height          String?  // e.g., "5'8" or "172cm"
  weight          String?  // e.g., "70kg"
  
  // Medical Info
  allergies       String?  // Comma-separated or text
  conditions      String?  // Chronic conditions
  medications     String?  // Current medications
  
  // Emergency Contact
  emergencyName   String?
  emergencyPhone  String?
  emergencyRelation String?
  
  // Insurance
  insuranceProvider String?
  insuranceNumber   String?
  
  // Link to User
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  
  updatedAt       DateTime @updatedAt
}